<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PotfolioActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodgree Apps!"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="Spotify Streamer"
            android:id="@+id/btn_spotify"
            android:onClick="sendMessage"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="Scores App"
            android:id="@+id/btn_scores"
            android:onClick="sendMessage"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/btn_library"
            android:onClick="sendMessage"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="Build It Bigger"
            android:id="@+id/btn_bigger"
            android:onClick="sendMessage"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="XYZ Reader"
            android:id="@+id/btn_reader"
            android:onClick="sendMessage"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="Capstone: My Own App"
            android:id="@+id/btn_capstone"
            android:onClick="sendMessage"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
